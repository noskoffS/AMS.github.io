<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.Users.MainActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        ></ImageView>

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="1000dp"
        android:layout_height="276dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="50dp"
        android:text="Мы специализируемся на лепке миниатюр на
 заказ."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/but1"
        android:padding="20dp"
        android:text="Уже есть аккаунт? Войти"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="@android:color/black"
    />

    <Button
        android:id="@+id/main_join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/main_login_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputdes"
        android:padding="20dp"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:textSize="33sp"
        android:textColor="@android:color/black"
        ></Button>


"

        />


"
</RelativeLayout>
